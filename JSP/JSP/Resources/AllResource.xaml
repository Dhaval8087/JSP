    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource infoBox_brush}"></Setter>
    </Style>
    <Style TargetType="{x:Type CheckBox}">
        <Setter Property="Foreground" Value="{StaticResource infoBox_brush}"></Setter>
